{% extends 'base.html.twig' %}

{% block title %}Cibles{% endblock %}

{% block content %}
    <h1>Cibles</h1>

   <div class="missionsSection" id="missionsSection">
    {% for target in targets %}
        <div class="form-container">
            <div class="card-header">
                <h5 class="card-title text-center">{{ target.firstName }} {{ target.lastName }}</h5>
            </div>
            <div class="card-body mt-3">
                <div class="row">
                    <div class="col-md-6">
                        <p class="card-text"><strong>FirstName :</strong> {{ target.firstName }}</p>
                        <p class="card-text"><strong>LastName :</strong> {{ target.lastName }}</p>
                        <p class="card-text"><strong>DateOfBirth :</strong> {{ target.dateOfBirth ? target.dateOfBirth|date('Y-m-d') : '' }}</p>
                        <p class="card-text"><strong>CodeName :</strong> {{ target.codeName }}</p>
                    </div>
                    <div class="col-md-6">
                    <p class="card-text"><strong>Nationality :</strong> {{ target.nationality }}</p>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-center">
                <a class="btn btn-primary m-2" href="{{ path('app_targets_show', {'id': target.id}) }}">Voir</a>
                <a class="btn btn-secondary m-2" href="{{ path('app_targets_edit', {'id': target.id}) }}">Éditer</a>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            Aucune donnée n'a été trouvée.
        </div>
    {% endfor %}
</div>

<a class="btn btn-primary" href="{{ path('app_targets_new') }}">Nouvelle cible</a>

{% endblock %}
