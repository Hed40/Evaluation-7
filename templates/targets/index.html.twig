{% extends 'base.html.twig' %}

{% block title %}Targets index{% endblock %}

{% block content %}
    <h1>Cibles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>DateOfBirth</th>
                <th>CodeName</th>
                <th>Nationality</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for target in targets %}
            <tr>
                <td>{{ target.firstName }}</td>
                <td>{{ target.lastName }}</td>
                <td>{{ target.dateOfBirth ? target.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ target.codeName }}</td>
                <td>{{ target.nationality }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_targets_show', {'id': target.id}) }}">voire</a>
                    <a class="btn btn-primary" href="{{ path('app_targets_edit', {'id': target.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_targets_new') }}">Nouvelle cible</a>
{% endblock %}
