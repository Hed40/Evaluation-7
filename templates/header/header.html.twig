<header class="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
    <img class="header-img" src="{{ asset('uploads/avatars/detective.png') }}">
      <a class="navbar-brand title" href="{{ path('app_home') }}">Spy Missions Management</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          {% if not is_granted('ROLE_USER') %}
            {% if app.request.attributes.get('_route') != 'app_login' %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="missionsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Consulter les missions
                </a>
                <ul class="dropdown-menu" aria-labelledby="missionsDropdown">
                  <li>
                    <a class="dropdown-item user" href="{{ path('app_home_missions_by_statut', {'statut': 'En cours'}) }}" data-statut="En cours">Mission en cours</a>
                  </li>
                  <li>
                    <a class="dropdown-item user" href="{{ path('app_home_missions_by_statut', {'statut': 'En attente'}) }}" data-statut="En attente">Mission en attente</a>
                  </li>
                  <li>
                    <a class="dropdown-item user" href="{{ path('app_home_missions_by_statut', {'statut': 'Terminée'}) }}" data-statut="Terminée">Mission terminée</a>
                  </li>
                  <li>
                    <a class="dropdown-item user" href="{{ path('app_home_missions_by_statut', {'statut': 'Annulée'}) }}" data-statut="Annulée">Mission annulée</a>
