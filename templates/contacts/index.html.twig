{% extends 'base.html.twig' %}

{% block title %}Contacts index{% endblock %}

{% block content %}
    <h1>Contacts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>DateOfBirth</th>
                <th>CodeName</th>
                <th>Nationality</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.firstName }}</td>
                <td>{{ contact.lastName }}</td>
                <td>{{ contact.dateOfBirth ? contact.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ contact.codeName }}</td>
                <td>{{ contact.nationality }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_contacts_show', {'id': contact.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('app_contacts_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune donnée n'a été trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_contacts_new') }}">Nouveau contact</a>
{% endblock %}
