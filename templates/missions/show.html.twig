{% extends 'base.html.twig' %}

{% block title %}Missions{% endblock %}

{% block content %}
    <h1>Missions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>CodeName</th>
                <td>{{ mission.codeName }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ mission.country }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ mission.startDate ? mission.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ mission.endDate ? mission.endDate|date('Y-m-d') : '' }}</td>
            </tr>
                        <tr>
                <th>Agents</th>
                				<td>
						{% for agent in mission.agents %}
							{{ agent.firstName }}
							{% if not loop.last %},
							{% endif %}
						{% endfor %}
					</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ mission.statut }}</td>
            </tr>
            <tr>
                <th>RequiredSpeciality</th>
                <td>{{ mission.requiredSpeciality }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_missions_index') }}">Retour</a>

    <a href="{{ path('app_missions_edit', {'id': mission.id}) }}">edit</a>

    {{ include('missions/_delete_form.html.twig') }}
{% endblock %}
